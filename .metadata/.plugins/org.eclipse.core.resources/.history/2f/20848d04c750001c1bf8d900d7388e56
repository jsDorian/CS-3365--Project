			cart.setDisable(false);
		} else if (type == "error") {
			// TODO: enable error controls
		} else if (type == "scale") {
			// TODO: enable scale controls
		} else if (type == "payment") {
			// TODO: enable payment controls
		}
	}
	
	public static void main(String[] args) {
		launch(args);
	}
}
