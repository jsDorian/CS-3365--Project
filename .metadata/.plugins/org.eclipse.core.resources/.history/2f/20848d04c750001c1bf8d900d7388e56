			Queue<String> resp = new LinkedList<>(this.client.resp);
			String value = null;
			
			while (resp.size() > 0) {
	    		value = resp.remove();
	    		
	    		String[] result = value.split(",");
	    		
	    		for (int i = 0; i < result.length; i++) {
	    			
	    		}
	    	}
		}
	}
	
